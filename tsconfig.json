{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "rootDir": "./",
      "outDir": "./build",
      "esModuleInterop": true,
      "strict": true,
      "declaration": true,
      "types": [ "node", "jest" ],
      "allowJs": true
    },
    "include": [
      "./src/*.ts",
      "./src/**/*.ts",
      "./src/*.js",
      "./src/**/*.js", "src/database/models/index.js.x",
    ],
    "exclude": [
      "node_modules",
      "./tests/*.ts",
      "./tests/**/*.ts"
    ]
  }